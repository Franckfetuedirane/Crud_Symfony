{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

    <div class="row">
        {% for field in form %}
            <div class="col-md-6 mb-3">
                {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(field, {'attr': {'class': 'text-danger'}}) }}
            </div>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
        <button class="btn btn-primary">
            <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
        </button>
    </div>

{{ form_end(form) }}