{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">
        <i class="fas fa-user-plus text-success"></i> Créer un nouvel utilisateur
    </h1>

    <div class="card shadow-sm p-4">
        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
        <div class="row">
            {% for field in form %}
                <div class="col-md-6 mb-3">
                    {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(field, {'attr': {'class': 'text-danger'}}) }}
                </div>
            {% endfor %}
        </div>
        <button type="submit" class="btn btn-success w-100 mt-3">
            <i class="fas fa-check"></i> Créer
        </button>
        {{ form_end(form) }}
    </div>

    <div class="mt-4 text-center">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>
{% endblock %}