{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">
        <i class="fas fa-user-plus text-success"></i> Créer un nouvel utilisateur
    </h1>

    <div class="card shadow-sm p-4">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success w-100 mt-3">Créer</button>
        {{ form_end(form) }}
    </div>

    <div class="mt-4 text-center">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>
{% endblock %}