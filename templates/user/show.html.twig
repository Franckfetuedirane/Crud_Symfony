{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.nom }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">
                <i class="fas fa-user-circle"></i> Profil de {{ user.nom }}
            </h2>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong><i class="fas fa-envelope text-primary"></i> Email :</strong>
                    <span>{{ user.email }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong><i class="fas fa-user text-primary"></i> Nom :</strong>
                    <span>{{ user.nom }}</span>
                </li>
            </ul>
        </div>
        <div class="card-footer text-center">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier le profil
            </a>
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour Ã  la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}